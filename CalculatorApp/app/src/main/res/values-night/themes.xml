<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorDark</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorDark</item>
        <item name="colorOnPrimary">@color/primaryLightColorDark</item>
        <item name="android:textColorPrimary">@color/primaryTextColorDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorDark</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColorDark</item>
        <item name="colorOnSecondary">@color/secondaryDarkColorDark</item>
        <item name="android:textColorSecondary">@color/secondaryTextColorDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/textViewCustomization</item>
    </style>


    <style name="textViewCustomization" parent="Widget.AppCompat.TextView">
        <item name="android:typeface">monospace</item>
    </style>

    <style name='buttonStyles' parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/secondaryLightColorDark</item>
    </style>



    <style name='buttonStyles.clearButtonStyles' parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/secondaryTextColorDark</item>
        <item name="backgroundTint">@color/secondaryLightColorDark</item>
    </style>
</resources>